<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.zxgaer.xgditor">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Xgditor"
        tools:targetApi="31">
        <activity
            android:name=".codeBlocksListActivity"
            android:exported="false" />
        <activity
            android:name=".addonEditActivity"
            android:exported="false" />
        <activity
            android:name=".addonsEditActivity"
            android:exported="false"
            android:label="@string/title_activity_addons_edit"
            android:theme="@style/Theme.Xgditor.NoActionBar" />
        <activity
            android:name=".addonEditLayout"
            android:exported="false" />
        <activity
            android:name=".addItemsActivity"
            android:exported="false" />

        <receiver
            android:name=".projectMain"
            android:exported="false">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/project_main_info" />
        </receiver>

        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>